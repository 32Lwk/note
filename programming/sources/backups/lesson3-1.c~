/* 課題3-1 for(;;)構文による A,B,C,D の計算 */
#include <stdio.h>

int main(void)
{
    int i = 1;
    int A = 0, B = 0, C = 0;
    double D = 0.0;

    // 無限ループで break まで繰り返す
    for( ; ; ) {
        A += i;        // A = 1 + 2 + ... + 10
        B += i * i;    // B = 1^2 + 2^2 + ... + 10^2
        C += i * i * i;// C = 1^3 + 2^3 + ... + 10^3
        D += 1.0 / i;  // D = 1 + 1/2 + 1/3 + ... + 1/10
        if(i >= 10) break;
        i++;
    }

    printf("A = %d\n", A);
    printf("B = %d\n", B);
    printf("C = %d\n", C);
    printf("D = %.10f\n", D);

    return 0;
}
